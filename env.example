# Firebase Configuration
# Get these values from your Firebase project settings
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# AWS SES Configuration
# Get these from your AWS IAM user with SES permissions
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-2

# Optional: Firebase Admin SDK (for server-side operations)
# Download the service account key from Firebase Console
FIREBASE_ADMIN_PROJECT_ID=your_project_id_here
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com

# Application Configuration
NEXT_PUBLIC_APP_NAME=Email Marketing Dashboard
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email Configuration
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
DEFAULT_FROM_NAME=Your Company Name
MAX_EMAILS_PER_DAY=100
EMAIL_DELAY_MS=2000

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Database Configuration (if using external database)
DATABASE_URL=your_database_url_here

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Email Templates
EMAIL_TEMPLATE_PATH=./templates
DEFAULT_EMAIL_TEMPLATE=default.html

# Monitoring and Analytics
ENABLE_ANALYTICS=true
ANALYTICS_ID=your_analytics_id_here

# Error Reporting
SENTRY_DSN=your_sentry_dsn_here
ENABLE_ERROR_REPORTING=false
