# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server
NODE_ENV=development
PORT=5000

# Database - Use MongoDB Atlas (free) or local MongoDB
MONGODB_URI=mongodb://localhost:27017/email-marketing
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/email-marketing

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# AWS SES (Optional - leave empty for testing)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_SES_FROM_EMAIL=

# Application URLs
APP_URL=http://localhost:3000
API_URL=http://localhost:5000

# CORS Origins
CORS_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
